<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SignUpActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <androidx.appcompat.widget.Toolbar

                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="#FFFFFFFF"
                    android:minHeight="?attr/actionBarSize"
                    android:theme="?attr/actionBarTheme"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        android:weightSum="8">

                        <ImageView
                            android:id="@+id/image_sign_up_back"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/back" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="4"
                            android:gravity="center"
                            android:text="회원가입"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:visibility="invisible"/>




                    </LinearLayout>


                </androidx.appcompat.widget.Toolbar>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    />

            </LinearLayout>






            <TextView
                android:id="@+id/text_sign_up_company_number_result"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*판매를 원하시는 경우 파트너 판매회원으로 가입해주세요."
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="*필수입력정보는 반드시 입력하셔야 합니다."
                    android:textSize="15dp"
                    android:paddingLeft="5dp"
                    />

            </LinearLayout>




            <TextView
                android:id="@+id/text_sign_up_company_name_result"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/border_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@drawable/right_line"
                    android:src="@drawable/icon_mail"/>

                <EditText
                    android:id="@+id/edit_sign_up_email"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"
                    android:background="@null"
                    android:hint="아이디(이메일)"
                    android:paddingLeft="5dp"
                    android:textSize="15dp" />

                <Button
                    android:id="@+id/btn_sign_up_check_email"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="중복확인"
                    android:background="@drawable/textview_layer"
                    android:textColor="#E6E4C1"
                    android:layout_height="match_parent" />


            </LinearLayout>



            <TextView
                android:id="@+id/text_sign_up_company_email_result"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/border_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/right_line"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_lock"/>

                <EditText
                    android:id="@+id/edit_signup_business_pw"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textSize="15dp"
                    android:hint="비밀번호"
                    android:background="@null"
                    android:paddingLeft="5dp"
                    android:inputType="textPassword"
                    android:layout_height="match_parent" />


            </LinearLayout>



            <TextView
                android:id="@+id/text_sign_up_company_pw_result"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/border_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:background="@drawable/right_line"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_lock"/>

                <EditText
                    android:id="@+id/edit_signup_business_pw_re"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textSize="15dp"
                    android:hint="비밀번호확인"
                    android:background="@null"
                    android:paddingLeft="5dp"
                    android:inputType="textPassword"
                    android:layout_height="match_parent" />


            </LinearLayout>



            <TextView
                android:id="@+id/text_sign_up_company_pw_re_result"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/border_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@drawable/right_line"
                    android:src="@drawable/icon_me2"/>

                <EditText
                    android:id="@+id/edit_signup_business_name"
                    android:layout_width="0dp"
                    android:layout_weight="6"
                    android:textSize="15dp"
                    android:hint="이름"
                    android:background="@null"
                    android:paddingLeft="5dp"
                    android:layout_height="match_parent" />


            </LinearLayout>



            <TextView
                android:id="@+id/text_sign_up_name_result"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="@drawable/border_line"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                >

                <ImageView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="match_parent"
                    android:background="@drawable/right_line"
                    android:src="@drawable/icon_phone"/>

                <EditText
                    android:id="@+id/edit_sign_up_phone"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:textSize="15dp"
                    android:hint="핸드폰"
                    android:background="@null"
                    android:paddingLeft="5dp"
                    android:inputType="number"
                    android:layout_height="match_parent" />

                <Button
                    android:id="@+id/btn_sign_up_phone"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:text="인증"
                    android:visibility="invisible"
                    android:background="@drawable/textview_layer"
                    android:textColor="#E6E4C1"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible"
                    android:layout_height="match_parent" />
            </LinearLayout>


            <TextView
                android:id="@+id/text_sign_up_company_phone_result"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:visibility="gone"
                />
          



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/check_sign_up_information1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="8"
                    android:gravity="center"
                    android:text="개인정보 수집,이용동의"
                    android:textSize="18dp" />

                <CheckBox
                    android:id="@+id/check_sign_up_information1_detail"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:button="@drawable/down"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_sign_up_detail1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:text="출동SOS는 원칙적으로 정보주체의 개인정보를 수집·이용 목적으로 명시한 범위 내에서 처리하며, 다음의 경우(개인정보보호법 제18조 2항에서 정한 경우)를 제외하고는 정보주체의 사전 동의 없이는 본래의 목적 범위를 초과하여 처리하거나 제3자에게 제공하지 않습니다.

1. 정보주체로부터 별도의 동의를 받는 경우
2. 법률에 특별한 규정이 있는 경우
3. 정보주체 또는 법정대리인이 의사표시를 할 수 없는 상태에 있거나 주소불명 등으로 사전 동의를 받을 수 없는 경우로서 명백히 정보주체 또는 제3자의 급박한 생명, 신체, 재산의 이익을 위하여 필요하다고 인정되는 경우
4. 통계작성 및 학술연구 등의 목적을 위하여 필요한 경우로서 특정 개인을 알아 볼 수 없는 형태로 개인정보를 제공하는 경우
5. 개인정보를 목적 외의 용도로 이용하거나 이를 제3자에게 제공하지 아니하면 다른 법률에서 정하는 업무를 수행할 수 없는 경우로서 보호위원회의 심의·의결을 거친 경우
6. 조약, 그 밖의 국제협정의 이행을 위하여 외국정보 또는 국제기구에 제공하기 위하여 필요한 경우
7. 범죄의 수사와 공소의 제기 및 유지를 위하여 필요한 경우
8. 법원의 재판업무 수행을 위하여 필요한 경우
9. 형 및 감호, 보호처분의 집행을 위하여 필요한 경우"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >

                <CheckBox
                    android:id="@+id/check_sign_up_information2"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="개인정보 제공동의"
                    android:layout_height="match_parent" />

                <CheckBox
                    android:id="@+id/check_sign_up_information2_detail"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:button="@drawable/down"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_sign_up_detail2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:text="출동SOS는 개인정보의 처리업무를 위탁하는 경우 다음의 내용이 포함된 문서에 의하여 처리하고 있습니다.
1. 위탁업무 수행 목적 외 개인정보의 처리 금지에 관한 사항
2. 개인정보의 관리적·기술적 보호조치에 관한 사항
3. 개인정보의 안전관리에 관한 사항
위탁업무의 목적 및 범위, 재위탁 제한에 관한 사항, 개인정보 안전성 확보 조치에 관한 사항, 위탁업무와 관련하여 보유하고 있는 개인정보의 관리현황점검 등 감독에 관한 사항, 수탁자가 준수하여야할 의무를 위반한 경우의 손해배상책임에 관한 사항
또한, 위탁하는 업무의 내용과 개인정보 처리업무를 위탁받아 처리하는 자(수탁자)에 대하여 해당 홈페이지에 공개하고 있습니다."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >

                <CheckBox
                    android:id="@+id/check_sign_up_information3"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="위치정보 전송동의"
                    android:layout_height="match_parent" />

                <CheckBox
                    android:id="@+id/check_sign_up_information3_detail"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:button="@drawable/down"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_sign_up_detail3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:text="이용약관
제 1조 목적
이 약관은 위치기반서비스와 관련하여 사용자와 소방방재청 간 위치정보의 보호및 이용 등에 관한 법률의 규정에 의거 상호간에 권리 및 의무, 기타 제반 사항을 정함을 목적으로 합니다.
제 2조 개인위치정보 수집에 관한 동의
수집목적
사용자의 정확한 위치정보로 신속한 긴급구조를 목적으로 합니다. 사용자는 본 약관에 동의함으로써 이에 동의한 것으로 간주됩니다.

수집항목
사용자의 개인위치정보 및 이동전화번호

보유 및 활동기간
사용자의 정보는 신고접수 시부터 상황종결시까지 사용됩니다.

동의거부 권리 및 불이익
본 개인정보에 제공에 대한 동의를 거부하실 수 있습니다. 이 경우 119신고 앱의 서비스 이용이 제한됩니다."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >

                <CheckBox
                    android:id="@+id/check_sign_up_information4"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="데이터 네트워크연결/GPS활성화동의"
                    android:layout_height="match_parent" />

                <CheckBox
                    android:id="@+id/check_sign_up_information4_detail"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:button="@drawable/down"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_sign_up_detail4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"
                    android:text="이 약관은 119신고 앱으로 119 신고시, 신고자의 정확한 위치정보 측정 및 전송을 위해 신고방식에 따라 위치서비스(GPS, WIFI,무선네트워크), 데이터네트워크(3G,4G)등을 자동 활성화 시킬 수 있으며, 데이터네트워크(3G,4G)활성화 및 이용으로 인해 데이터 이용요금이 발생 할 수 있습니다. 실행 중 삭제 및 강제종료시 GPS등 5가지 항목의 상태정보 복원이 불가능합니다."/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                >

                <CheckBox
                    android:id="@+id/check_sign_up_information_all"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="8"
                    android:textSize="18dp"
                    android:gravity="center"
                    android:text="전체 약관 동의"
                    android:layout_height="match_parent" />

                <ImageView

                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:src="@drawable/down"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <Button
                    android:id="@+id/btn_sign_up_add"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview_layer"
                    android:textColor="#E6E4C1"
                    android:text="가입"/>

                <Button
                    android:id="@+id/btn_sign_up_cancel"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:background="@drawable/textview_layer"
                    android:textColor="#E6E4C1"
                    android:text="취소"/>


            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/textView_main_result" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>